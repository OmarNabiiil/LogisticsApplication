<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omar.logisticsapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationActivity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".SuppliersActivity" />
        <activity android:name=".ProductsActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".TransportationActivity" />
        <activity android:name=".CustomersActivity" />
        <activity android:name=".SuppliersOrdersActivity" />
        <activity android:name=".CustomerOrder.ClientsOrdersActivity" />
        <activity android:name=".CustomerOrder.ClientsTransportationActivity" />
        <activity android:name=".CustomerPanelActivity" />
        <activity android:name=".SuppliersTransportationActivity" />
        <activity android:name=".DriversActivity"></activity>
    </application>

</manifest>