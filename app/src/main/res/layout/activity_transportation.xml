<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_suppliersTrans"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:onClick="SuppliersTransportation"
        android:background="#01b357"
        android:textColor="#FFF"
        android:text="suppliers transportation"/>

    <Button
        android:id="@+id/btn_clientsTrans"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:onClick="ClientsTransportation"
        android:background="#01b357"
        android:textColor="#FFF"
        android:text="clients transportation"/>

    <Button
        android:id="@+id/btn_drivers"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:onClick="Drivers"
        android:background="#01b357"
        android:textColor="#FFF"
        android:text="drivers"/>



</LinearLayout>

